---
interface Props {
  title: string;
}

import Header from '@components/organisms/es/Header.astro';

const production = import.meta.env.PROD;

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Web, mobile y mucho más, mi meta es brindar soluciones para ti, contactame ahora para empezar ya'
    />
    <meta name='viewport' content='width=device-width,initial-scale=1' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <meta property='og:type' content='website' />
    <meta property='og:url' content='https://fulanod3tal.com/' />
    <meta
      property='og:title'
      content='Roberto De la Garza | FrontEnd Developer'
    />
    <meta
      property='og:description'
      content='Web, mobile y mucho más, mi meta es brindar soluciones para ti, contactame ahora para empezar ya'
    />
    <meta
      property='og:image'
      content='https://fulanod3tal.com/opengraph-es.png'
    />

    <!-- Twitter -->
    <meta property='twitter:card' content='summary_large_image' />
    <meta property='twitter:url' content='https://fulanod3tal.com/' />
    <meta
      property='twitter:title'
      content='Roberto De la Garza | FrontEnd Developer'
    />
    <meta
      property='twitter:description'
      content='Web, mobile y mucho más, mi meta es brindar soluciones para ti, contactame ahora para empezar ya'
    />
    <meta
      property='twitter:image'
      content='https://fulanod3tal.com/opengraph-es.png'
    />
    <title>{title}</title>

    {
      production && (
        <script
          is:inline
          defer
          src='https://umami-xi-plum.vercel.app/script.js'
          data-website-id='e6688738-334b-4633-925b-f35710b76521'
        />
      )
    }
  </head>
  <body
    class='max-w-screen-2xl mx-auto text-base px-4 md:px-14 mb-8 bg-white dark:bg-zinc-800 text-black dark:text-white'
  >
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: 'Rubik';
    src: url('/fonts/Rubik-ExtraBold.ttf') format('opentype');
    font-weight: 800;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Rubik';
    src: url('/fonts/Rubik-Black.ttf') format('opentype');
    font-weight: 900;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Poppins';
    src: url('/fonts/Poppins-Regular.ttf') format('opentype');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Poppins';
    src: url('/fonts/Poppins-Medium.ttf') format('opentype');
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }
</style>
