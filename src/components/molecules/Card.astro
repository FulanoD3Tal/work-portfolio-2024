---
import CTAButton from '../atoms/CTAButton.astro';
interface Props {
  img: string;
  name: string;
  description?: string;
  link: string;
}

const { img, name, description, link } = Astro.props;
---

<article
  class='bg-gray-100 dark:bg-zinc-600 group hover:scale-95 transition-transform duration-200 rounded-md p-2 max-w-[32rem] flex flex-col gap-2'
>
  <div
    class='aspect-video bg-gray-200 rounded-md overflow-hidden
      group-hover:backdrop-blur-lg transition-all duration-200 relative'
  >
    <img
      src={img}
      alt={name}
      loading='lazy'
      class='group-hover:scale-125 transition-transform duration-300 absolute inset-0 object-fill'
    />
    <CTAButton
      label=`${name} link`
      link={link}
      external
      class='absolute left-1/2 top-1/2 scale-0 group-hover:scale-100 -translate-x-1/2 -translate-y-1/2'
    >
      <svg height='24' viewBox='0 -960 960 960' width='24' class='fill-current'
        ><path
          d='M440-280H280q-83 0-141.5-58.5T80-480q0-83 58.5-141.5T280-680h160v80H280q-50 0-85 35t-35 85q0 50 35 85t85 35h160v80ZM320-440v-80h320v80H320Zm200 160v-80h160q50 0 85-35t35-85q0-50-35-85t-85-35H520v-80h160q83 0 141.5 58.5T880-480q0 83-58.5 141.5T680-280H520Z'
        ></path></svg
      >
    </CTAButton>
  </div>
  <div class='ml-1'>
    <h3 class='font-bold'>{name}</h3>
    <p>{description}</p>
  </div>
</article>
